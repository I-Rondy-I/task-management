{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h2>List of tasks</h2>
        <a href="{{ path('task_create') }}" class="btn btn-primary mb-3">Create task</a>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Deadline</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.title }}</td>
                    <td>{{ task.description|slice(0, 50) }}...</td>
                    <td>{{ task.deadline|date('Y-m-d H:i') }}</td>
                    <td>{{ task.status.value }}</td>
                    <td>
                        <a href="{{ path('task_show', {'id': task.id}) }}" class="btn btn-info btn-sm">Deatails</a>
                        <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-warning btn-sm">Modify</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}