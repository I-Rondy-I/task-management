{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4">Login</h2>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('fos_user_security_check') }}" method="post" class="form">
            <div class="mb-3">
                <label for="username" class="form-label">UserName</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="_password" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <p class="mt-3">
            Don't have an account? <a href="{{ path('fos_user_registration_register') }}">Register</a>
        </p>
    </div>
{% endblock %}