{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h2>Registration</h2>
        <form method="post" action="{{ path('fos_user_registration_register') }}" class="form">
            <div class="mb-3">
                <label for="fos_user_registration_form_username" class="form-label">UserName</label>
                <input type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="fos_user_registration_form_email" class="form-label">Email</label>
                <input type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="fos_user_registration_form_plainPassword_first" class="form-label">Password</label>
                <input type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="fos_user_registration_form_plainPassword_second" class="form-label">Repeat password</label>
                <input type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" class="form-control" required />
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('fos_user_registration') }}" />
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
{% endblock %}